<!DOCTYPE html>
<html lang="en">
    <%- include ../layouts/head.ejs %>
    <body>
        <%- include ../layouts/header.ejs %>
        <main>
            <h1><%= clinic.name %></h1>
            <% if (typeof successMessage != 'undefined' && successMessage) { %>
                <h2><%= successMessage %></h2>
            <% } %>
            <% clinic.patients.forEach(patient => { %>
                <a href="/clinics/<%= clinic.id %>/patients/show/<%= patient.id %>"><%= patient.name.lastName %> <%= patient.name.firstName %></a>
                <a href="/clinics/<%= clinic.id %>/patients/update/<%= patient.id %>">update</a>
            <% }); %>
        </main>
        <%- include ../layouts/footer.ejs %>
    </body>
</html>