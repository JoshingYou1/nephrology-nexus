<!DOCTYPE html>
<html lang="en">
    <%- include ../layouts/head.ejs %>
    <body>
        <div class="clinics-show-container">
            <%- include ../layouts/header.ejs %>
            <nav class="breadcrumbs">
                <a href="/clinics">Clinics</a> &gt
                <span><%= clinic.name %></span>
            </nav>
            <main class="clinics-show-main">
                <h1><%= clinic.name %></h1>
                <% if (typeof successMessage != 'undefined' && successMessage) { %>
                    <h2><%= successMessage %></h2>
                <% } %>
                <section class="clinic-info">
                    <p><%= clinic.address.street %></p>
                    <p><%= clinic.address.city %>, <%= clinic.address.state %>, <%= clinic.address.zipCode %></p>
                    <p>Phone Number: <%= clinic.phoneNumber %></p>
                    <p>Fax Number: <%= clinic.faxNumber %></p>
                    <p><%= clinic.managerName %></p>
                </section>
                <form  class="clinic-delete-form" method="POST" action="/clinics/<%= clinic._id %>">
                    <button class="fas fa-trash-alt"> Delete Clinic</button>
                    <input type="hidden" name="_method" value="DELETE">
                </form>
                <a class="fas fa-edit" href="/clinics/update/<%= clinic.id %>"> Update Clinic</a>
                <a class="fas fa-arrow-right" href="/clinics/<%= clinic._id %>/patients"> Go to patients</a>
            </main>
            <span class="clinics-show-footer"><%- include ../layouts/footer.ejs %></span>
            <%- include ../layouts/scripts.ejs %>
        </div>
    </body>
</html>