<!DOCTYPE html>
<html lang="en">
    <%- include ../layouts/head.ejs %>
    <body>
        <div class="patients-show-container">
            <span class="patients-show-header"><%- include ../layouts/header.ejs %></span>
            <nav class="breadcrumbs">
                <a href="/clinics">Clinics</a> &gt
                <a href="/clinics/show/<%= clinicId %>"><%= patient.clinic.name %></a> &gt
                <a href="/clinics/<%= clinicId %>/patients">Patients</a> &gt
                <span><%= patient.patientName %></span>
            </nav>
            <h1 class="patient-name"><%= patient.patientName %></h1>
            <main class="patients-show-main">
                <% if (successMessage != 'undefined' && successMessage) { %>
                    <h2><%= successMessage %></h2>
                <% } %>
                <section class="patient-information">
                    <div class="patient-id-info">
                        <p><span class="sex-span">Sex:</span>&nbsp;<%= patient.sex %></p>
                        <p><span class="dob-span">DOB:</span>&nbsp;<%= patient.formatBirthDate %></p>
                        <p><span class="ssn-span">SSN:</span>&nbsp;<%= patient.formatSsn %></p>
                    </div>
                    <div class="patient-address">
                        <h2 class="patient-address-header">Address</h2>
                        <p><%= patient.address.street %></p>
                        <p><%= patient.address.city %>,&nbsp;<%=patient.address.state %>,&nbsp;<%= patient.address.zipCode %></p>
                    </div>
                    <div class="patient-phone-numbers">
                        <h2 class="patient-phone-numbers-header">Phone Number(s)</h2>
                        <p><span class="home-phone-span">Home:</span>&nbsp;<%= patient.emptyHomePhoneValue %></p>
                        <p><span class="cell-phone-span">Cell:</span>&nbsp;<%= patient.emptyCellPhoneValue %></p>
                        <p><span class="work-phone-span">Work:</span>&nbsp;<%= patient.emptyWorkPhoneValue %></p>
                    </div>
                </section>
                <form  class="patient-delete-form" method="POST" action="/clinics/<%= clinicId %>/patients/<%= patient._id %>">
                    <button class="fas fa-trash-alt">&nbsp;<span class="delete-patient-span">Delete</span></button>
                    <input type="hidden" name="_method" value="DELETE">
                </form>
                <a class="fas fa-edit" href="/clinics/<%= clinicId %>/patients/update/<%= patient._id %>">&nbsp;
                    <span class="update-patient-span">Update</span></a>
                <div class="go-to-lab-results-div">
                    <a class="go-to-lab-results-link"
                        href="/clinics/<%= clinicId %>/patients/<%= patient._id %>/lab-results">Go To Lab Results&nbsp;&nbsp;<span class="fas fa-arrow-right"></span></a>
                </div>
            </main>
            <span class="patients-show-footer"><%- include ../layouts/footer.ejs %></span>
            <%- include ../layouts/scripts.ejs %>
        </div>
    </body>
</html>